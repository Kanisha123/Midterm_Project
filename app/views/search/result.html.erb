<h1>Search#result</h1>
<p>Find me in app/views/search/result.html.erb</p>
<div class="container">
  <h1> Parks found: <%= @park_count.size %></h1>
  <% if @parks.empty? %>
    <p>Sorry, no parks found.</p>
  <% else %>
    <div class="d-inline-block">
      <%= paginate @parks, window: 2 %>
    </div>
    <%= form_tag(result_search_index_path, method: "get", :class => 'd-inline-block') do %>
      <%= label_tag(:q, "Search for Park:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search") %>
    <% end %>

    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>Park Name</th>
          <th>Address</th>
          <th>Park Category</th>
        </tr>
      </thead>
      <% @parks.each do |park| %>
        <tr>
          <td><%=link_to park.name, park_path(park)%></td>
          <td><%=park.address%></td>
          <td><%=park.category%></td>
        </tr>
      <%end%>
    </table>
  <% end %>
</div>
