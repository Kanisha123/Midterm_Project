<h1>Parks#index</h1>
<p>Find me in app/views/parks/index.html.erb</p>
<div class="d-inline-block">
    <%= paginate @parks, window: 2 %>
  </div>
<%
=begin%>
 <%= form_tag(userResults_search_index_path, method: "get", :class => 'd-inline-block') do %>
    <%= label_tag(:q, "Search for Parks:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
  <% end %>
<%
=end%>
<table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Park Name</th>
        <th>Address</th>
        <th>Park Category</th>
      </tr>
    </thead>
    <% @parks.each do |park| %>
      <tr>
        <td><%=link_to park.name, park_path(park)%></td>
        <td><%=park.address%></td>
        <td><%=park.category%></td>
      </tr>
    <%end%>
  </table>

