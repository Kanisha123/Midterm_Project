<h1 id="center"><%=@tree.botanical_name%> is in <%=@tree.park.name%></h1>
<table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Park Name</th>
        <th>Address</th>
        <th>Park Category</th>
      </tr>
    </thead>
      <tr>
        <td><%=link_to @tree.park.name, park_path(@tree.park)%></td>
        <td><%=@tree.park.address%></td>
        <td><%=@tree.park.category%></td>
      </tr>
  </table>
  <% map_url = "https://image.maps.api.here.com/mia/1.6/mapview?app_id=bL1d7bg8QUUxbBqhUe3s&app_code=I5yJwy4TZeC_-x7UvBgSnw&lat=#{@tree.lat}&lon=#{@tree.long}&vt=0&z=11&h=600&w=800"%>
  <%= image_tag(map_url, alt: "tree location") %>